<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTimeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="T6-T7-CN"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tvUpdatedDayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="right"
            android:text="2 ngÃ y"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_2dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginRight="9dp"
            android:layout_marginBottom="@dimen/margin_2dp"
            android:layout_toLeftOf="@+id/tvCopy"
            android:lineSpacingExtra="@dimen/margin_3dp"
            android:text="16 20 25 75"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tvCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_3dp"
            android:layout_marginRight="@dimen/margin_2dp"
            android:background="@drawable/border_corners_primary"
            android:padding="@dimen/padding_5dp"
            android:text="Copy"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/margin_2dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:layout_marginRight="@dimen/margin_2dp"
        android:background="@color/colorPrimary" />

</LinearLayout>